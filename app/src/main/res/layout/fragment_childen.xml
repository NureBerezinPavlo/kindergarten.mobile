<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.children.ChildenFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="100dp">
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/main_menu_title" />
                <LinearLayout
                    android:id="@+id/linearLayoutChildren"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/child_0"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:padding="16dp"
                        android:background="@color/light_gray"
                        app:cornerRadius="30dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileImage_0"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/child_1"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

                        <TextView
                            android:id="@+id/nameTextView_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/profileImage_0"
                            android:layout_alignParentTop="true"
                            android:text="Ім'я Прізвище"
                            android:textSize="30dp"
                            android:textColor="@color/gray"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/child_1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:padding="16dp"
                        android:background="@color/light_gray"
                        app:cornerRadius="30dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:id="@+id/profileImage_1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/child_2" />

                        <TextView
                            android:id="@+id/nameTextView_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/profileImage_1"
                            android:layout_alignParentTop="true"
                            android:text="Ім'я Прізвище"
                            android:textSize="30dp"
                            android:textColor="@color/gray"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/child_2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:padding="16dp"
                        android:background="@color/light_gray"
                        app:cornerRadius="30dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:id="@+id/profileImage_2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/child_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/profileImage_2"
                            android:layout_alignParentTop="true"
                            android:text="Ім'я Прізвище"
                            android:textSize="30dp"
                            android:textColor="@color/gray"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/salad_green"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sign_out_icon"
        app:borderWidth="0dp"
        app:tint="@color/white"
        app:layout_anchor="@id/textViewTitle"
        app:layout_anchorGravity="top|right|end"
        app:maxImageSize="40dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>